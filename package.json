{
  "name": "omnitrans",
  "version": "0.3.3",
  "description": "Omnitrans Application",
  "main": "main.js",
  "author": {
    "name": "MUGE_TONG"
  },
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "cross-env NODE_ENV=development nodemon --exec electron . --watch . --ext .html,.js,.css,.vue",
    "pack": "cross-env NODE_ENV=production electron-builder"
  },
  "build": {
    "appId": "top.trush.omnitrans",
    "productName": "Omnitrans",
    "directories": {
      "output": "build"
    },
    "extraResources": [
      {
        "from": "./shortcut",
        "to": "./scripts",
        "filter": [
          "*.exe"
        ]
      }
    ],
    "files": [
      "!src",
      "!.vscode",
      "!docs"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "./public/logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./public/logo.ico",
      "uninstallerIcon": "./public/logo.ico",
      "installerHeaderIcon": "./public/logo.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Omnitrans"
    }
  },
  "dependencies": {
    "axios": "^1.7.9",
    "pinia": "^2.3.1",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.1",
    "cross-env": "^7.0.3",
    "electron": "^33.3.2",
    "electron-builder": "^25.1.8",
    "nodemon": "^3.1.9",
    "vite": "^6.0.11",
    "vite-plugin-vue-devtools": "^7.7.1"
  }
}
